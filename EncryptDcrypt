#!/usr/bin/env python3
"""
EncryptDcrypt - Advanced Encryption System CLI
==============================================

Beautiful command-line interface for file encryption with benchmarking and metrics.

Usage:
    ./EncryptDcrypt

Author: KleaSCM <KleaSCM@gmail.com>
"""

import sys
from pathlib import Path

# Add the src directory to the path
sys.path.insert(0, str(Path(__file__).parent / "src"))

try:
    print("üîê Loading EncryptDcrypt CLI...")
    from encryptdecrypt.cli.interface import CLI
    
    def main():
        """Main entry point for the CLI."""
        print("üöÄ Starting CLI...")
        cli = CLI()
        cli.run_interactive()
    
    if __name__ == "__main__":
        main()
        
except ImportError as e:
    print(f"‚ùå Error importing CLI: {e}")
    print("Make sure you're in the correct directory and all dependencies are installed.")
    sys.exit(1)
except Exception as e:
    print(f"‚ùå Unexpected error: {e}")
    sys.exit(1) 